<%= render partial: "my_navbar" %>

<div class="main">
  <div></div>
  <div style="margin-top: 50px">
    This is <%= @cocktail.name %> 
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

    <p><%=link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-dark my-2 my-sm-0" %></p>
     <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> | <%= dose.ingredient["name"] %> -- <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete this dose?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
    <% end %>
    <%=link_to 'Home', root_path %>
  </div>
</div>
